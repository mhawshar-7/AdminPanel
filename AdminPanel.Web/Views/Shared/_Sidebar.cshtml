@using Microsoft.AspNetCore.Mvc.Rendering
@{
    string IsSectionActive(string area, string controller)
    {
        var routeData = ViewContext.RouteData;
        var currentArea = routeData.Values["area"]?.ToString() ?? "";
        var currentController = routeData.Values["controller"]?.ToString();

        if (area.Equals(currentArea, StringComparison.OrdinalIgnoreCase) &&
            controller.Equals(currentController, StringComparison.OrdinalIgnoreCase))
        {
            // "here" and "show" are the classes your theme uses to keep the accordion open
            return "here show";
        }
        return "";
    }
    string IsActive(string area, string controller, string action = "Index")
    {
        var routeData = ViewContext.RouteData;
        if (area == (routeData.Values["area"]?.ToString() ?? "") &&
            controller == routeData.Values["controller"]?.ToString() &&
            action == routeData.Values["action"]?.ToString())
        {
            return "active";
        }
        return "";
    }
}
